<Window x:Class="key_author.app_principal.CodeCor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:key_author.app_principal"
        mc:Ignorable="d"
        Title="CodeCor" Height="450" Width="800">
    <Grid Margin="18">
        
        <TextBox x:Name="LogBox" Grid.Row="2" Background="#181818" Foreground="#ccc"
                 BorderBrush="#333" BorderThickness="1" Padding="8"
                 TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
