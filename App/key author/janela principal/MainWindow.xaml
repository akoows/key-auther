<Window x:Class="key_author.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:key_author"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Login" Height="550" Width="450" WindowStartupLocation="CenterScreen"
        Background="#0a0a0a">

    <Window.Resources>
        <ResourceDictionary>
            <Color x:Key="panel">#111</Color>
            <Color x:Key="panelLight">#222</Color>
            <Color x:Key="text">#DDD</Color>

            <SolidColorBrush x:Key="panelbrush" Color="{StaticResource panel}"/>
            <SolidColorBrush x:Key="textbrush" Color="{StaticResource text}"/>
        </ResourceDictionary>
    </Window.Resources>

    <!-- 🧱 Conteúdo da janela -->
    <Grid Background="{StaticResource panelbrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="200px"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        
        <TextBlock x:Name="benv"
                   Text="Bem vindo!"
                   Foreground="{StaticResource textbrush}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Row="1"/>
        <TextBox TextChanged="codegor"
                 x:Name="caixinha"
                 Height="50"
                 Grid.Row="2"
                 Width="200"/>

    </Grid>
</Window>
